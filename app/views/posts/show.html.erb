<h1><%= @post.title%></h1><br>
<p><%= @post.description %></p>



<ul><strong>コメント一覧</strong>
	<% @post.comments.each do |comment| %>
	<li><%= comment.body %>
	<%= link_to "[削除]", post_comment_path(comment.post_id, comment.id), method: :delete, data:{ confirm: "本当に削除してよろしいですか？"} %>
	</li>
	<% end %>
	<li>
		<%= form_for [@post, @post.comments.build] do |f| %>
		<%= f.text_field :body %>
		<%= f.submit %>
		<% end %>
	</li>
</ul>

<p><%= link_to "TOP", posts_path %></p>
